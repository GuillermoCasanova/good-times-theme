


{% style %}

  .image-banner {
    position: relative;
    overflow: hidden;
  }

  .image-banner__inner {
    position: relative;
    padding-bottom: 125%; 
    overflow: hidden;
    z-index: 0; 
  }

  @media only screen and (min-width: 700px) {
    .image-banner__inner {
      padding-bottom: 80%; 
    }
  }


  @media only screen and (min-width: 990px) {
    .image-banner__inner {
      padding-bottom: 0;
      height: 100vh;
      max-height: 60rem;
    }
  }

  @media only screen and (min-width: 1600px) {
    .image-banner__inner {
      max-height: 65rem;
    }
  }

  @media only screen and (min-width: 2000px) {
    .image-banner__inner {
      max-height: 75rem;
    }
  }

  .image-banner__inner  img {
    position: absolute;
    width: 100%; 
    object-fit: cover;
    height: 100%; 
  }
  
  .character {
    position: absolute;
    bottom: -6rem;
    top: auto;  
    right: 5rem; 
    z-index: 3; 
    width: 20vw;
    max-width: 13rem;
  }

  .character img {
    width: 100%; 
    position: relative; 
  }

{% endstyle %}


