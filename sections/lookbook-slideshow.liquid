{{ 'vendor-swiper.css' | asset_url | stylesheet_tag }}
{{ 'section-lookbook-slideshow.css' | asset_url | stylesheet_tag }}



<div class="lookbook-slideshow-container__inner">

  <div class="lookbook-slideshow__header page-width">
    <h2 class="lookbook-slideshow__heading">
      Lookbook
    </h2>
  </div>

  <lookbook-slideshow> 
    <div class="lookbook-slideshow" data-slideshow>
        <ul  class="lookbook-slideshow__inner" data-slideshow-wrapper>
        {% for block in section.blocks %}
            <li class="lookbook-slideshow__slide" data-slideshow-slide>
                <div class="lookbook-slideshow__slide__inner">
                <img
                    srcset="{%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if block.settings.image.width >= 533 -%}{{ block.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if block.settings.image.width >= 1066 -%}{{ block.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {%- if block.settings.image.width >= 1600 -%}{{ block.settings.image | image_url: width: 1600 }} 1600w,{%- endif -%}
                    {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                    src="{{ block.settings.image | image_url: width: 533 }}"
                    sizes="(min-width: 700px) 50vw, 100vw"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}">
                </div>
            </li>
        {% endfor %}
       
        </ul>
        <div class="drag-cursor" aria-hidden="true" data-drag-cursor>
          <span>Click and Drag</span>
      </div>
    </div>
    <div data-slideshow-navigation class="lookbook-slideshow__navigation">
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </lookbook-slideshow>
</div>

<script type="module" src="{{ 'lookbook-slideshow.js' | asset_url }}" ></script>


{% schema %}
{
  "name": "Lookbook Slideshow",
  "tag": "section",
  "class": "lookbook-slideshow-container",
  "templates": [
    "index"
  ],
  "settings": [
    {
      "type": "text",
      "id": "name",
      "label": "Headline"
    }
  ],
  "blocks": [
    {
      "type": "slideshow_slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook Slideshow"
    }
  ]
}
{% endschema %}